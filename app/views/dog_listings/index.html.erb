<% if notice %>
  <div class="alert alert-primary" role="alert">
    <%= notice %>
  </div>
<% end %>

<h1 class="my-4">Dog Listings</h1>

<table class="table table-striped table-hover">
  <thead class="table-primary">
    <tr>
      <th>Name</th>
      <th>Breed</th>
      <th>Weight</th>
      <th>Price</th>
      <th>Seller email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dog_listings.each do |dog_listing| %>
      <tr>
        <td><%= dog_listing.name %></td>
        <td><%= dog_listing.breed %></td>
        <td><%= dog_listing.weight %> lbs</td>
        <td>$<%= dog_listing.price %></td>
        <td><%= link_to dog_listing.seller_email, "mailto:#{dog_listing.seller_email}" %></td>
        <td><%= link_to 'Show', dog_listing, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_dog_listing_path(dog_listing), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', dog_listing, class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dog Listing', new_dog_listing_path, class: 'btn btn-primary' %>
