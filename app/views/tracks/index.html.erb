<h1>Playlist</h1>

<table class="table table-striped table-hover">

  <thead class="thead-dark">
    <tr>
      <th>Number</th>
      <th>Track</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |t| %>
      <tr>
        <td><%= t.order_number %></td>
        <td><%= t.title %></td>
        <td>
          <%= link_to 'show', track_path(t) %> |
          edit |
          destroy
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
