<h1 class="my-4">Latest Blog Posts</h1>

<table class="table table-striped table-hover">

  <tbody>
    <% @blog_posts.each do |blog_post| %>
      <tr>
        <td><%= blog_post.title %></td>
        <td>TODO_AUTHOR</td>
        <td class="text-nowrap">
          <%= link_to 'Read', blog_post_path(blog_post), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Edit', edit_blog_post_path(blog_post), class: 'btn btn-primary btn-sm'  %>
          <%= link_to 'Delete', blog_post_path(blog_post), method: :delete, class: 'btn btn-primary btn-sm'  %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>

<p>
  <%= link_to 'New Blog Post', new_blog_post_path, class: 'btn btn-primary my-3' %>
</p>
